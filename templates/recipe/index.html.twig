{% extends 'base.html.twig' %}

{% block title %}Recipes{% endblock %}

{% block body %}
    <h1>üçΩ Recipes</h1>
    <div class="row">
        {% for recipe in recipes %}
            <div class="card mx-3 col" style="max-width: 400px;">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="#" class="img-fluid rounded-start" alt="ToDo">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">{{ recipe.name }}</h5>
                            <p class="card-text">{{ recipe.description }}</p>
                            <a class="btn btn-primary" href="{{ path('recipe_show', {id: recipe.id}) }}">{{ "Read"|trans }}</a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}